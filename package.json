    "dd-trace": "^3.32.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.0.1",
    "handlebars": "^4.7.7",
    "ioredis": "^5.3.1",
    "jose": "^5.2.2",
    "jsonwebtoken": "^9.0.0",
    "knex": "^3.1.0",
    "libphonenumber-js": "^1.10.34",
    "nanoid": "^5.0.6",
    "numeral": "^2.0.6",
    "pg": "^8.11.3",
    "qs": "^6.11.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
