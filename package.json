    "@graphql-codegen/typescript": "3.0.4",
    "@graphql-tools/schema": "^9.0.17",
    "@types/big.js": "^6.2.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
