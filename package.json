{
  "name": "sample-project",
  "version": "1.0.0",
  "description": "Sample-MonoRepo",
  "main": "dist/server.js",
  "scripts": {
    "test": "jest --workerIdleMemoryLimit=1536MB --verbose --ci --collectCoverage --reporters=default --reporters=jest-junit --coverageDirectory='./coverage' ./src",
    "test:unit": "jest --verbose --testPathIgnorePatterns='.+\\.int\\.test\\.ts' --no-cache ./src",
    "test:int": "jest --verbose --testPathPattern='.+\\.int\\.test\\.ts'",
    "test:spec": "jest --verbose --testPathPattern='.+\\.ts' --forceExit -t",
    "test:file": "jest --verbose --forceExit",
    "compile": "tsc --project tsconfig.build.json",
    "app": "node ./dist/server.js",
    "develop": "npx nodemon ./src/server.ts",
    "lint:fix": "npx eslint . --fix --ext .ts",
    "lint": "npx eslint . --ext .ts",
    "format": "npx prettier --write ."
  },
  "author": "John Patrick Tobias",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@types/numeral": "^2.0.2",
